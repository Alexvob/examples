<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserCreationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        tools:layout_editor_absoluteY="59dp"
        tools:layout_editor_absoluteX="50dp">


    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view22"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        app:contentPadding="0dp">

        <LinearLayout

            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


            <TextView
                style="@style/HintTextAdmin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginStart="5dp"
                android:textSize="19sp"
                android:text="@string/add_new_user"/>

            <EditText android:id="@+id/first_name_new_user"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:cursorVisible="true"
                android:hint="@string/name_admin"
                android:inputType="textCapSentences"
                android:layout_marginTop="15dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:text="@string/name_admin_hint"/>


            <EditText android:id="@+id/name_new_user"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:cursorVisible="true"
                android:hint="@string/name_admin"
                android:inputType="textCapSentences"
                android:layout_marginTop="15dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:text="@string/name_admin_hint"/>



            <EditText android:id="@+id/phone_num"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:cursorVisible="true"
                android:hint="@string/restore_pass_phone_num_hint"
                android:inputType="phone"
                android:singleLine="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:text="@string/example_phone_number"/>


            <EditText android:id="@+id/email_new_user"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:cursorVisible="true"
                android:hint="@string/restore_pass_phone_num_hint"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="5dp"
                android:text="@string/example_phone_number"/>


            <Button android:id="@+id/create_user_btn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/add_new_user_btn"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:onClick="createUser" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>