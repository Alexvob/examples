<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".user.UserControlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        tools:layout_editor_absoluteY="59dp"
        tools:layout_editor_absoluteX="50dp">


        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/layout_root_user_control"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                tools:layout_editor_absoluteY="59dp"
                tools:layout_editor_absoluteX="50dp"
                android:layout_marginTop="20dp">



                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_add_user"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="startUserCreationActivity"
                    android:layout_gravity="center_horizontal"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top"
                        tools:layout_editor_absoluteY="59dp"
                        tools:layout_editor_absoluteX="50dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="15dp"
                            android:textSize="18sp"
                            android:text="User creation" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:text="user creation" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_edit_user"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="startUserEditionActivity"
                    android:layout_gravity="center_horizontal"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top"
                        tools:layout_editor_absoluteY="59dp"
                        tools:layout_editor_absoluteX="50dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="15dp"
                            android:textSize="18sp"
                            android:text="User editing" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:text="user editing" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                tools:layout_editor_absoluteY="59dp"
                tools:layout_editor_absoluteX="50dp"
                android:layout_marginTop="20dp">



                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_delete_user"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="startUserDeletingActivity"
                    android:layout_gravity="center_horizontal"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top"
                        tools:layout_editor_absoluteY="59dp"
                        tools:layout_editor_absoluteX="50dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="15dp"
                            android:textSize="18sp"
                            android:text="User delete" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:text="user delete" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_table_user"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="startUserTableActivity"
                    android:layout_gravity="center_horizontal"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top"
                        tools:layout_editor_absoluteY="59dp"
                        tools:layout_editor_absoluteX="50dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="15dp"
                            android:textSize="18sp"
                            android:text="Structure management" />




                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="2.8dp"
            android:id="@+id/separator2"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray"/>


                <TextView
                    android:id="@+id/billing_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:text="Проверка существующих покупок" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_unblock_group"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:onClick="startGroupPoliciesActivity"
                    android:layout_gravity="center_horizontal"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="top"
                        tools:layout_editor_absoluteY="59dp"
                        tools:layout_editor_absoluteX="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="16sp"
                            android:text="Продлить использование на 1 год" />

                        <Button
                            android:id="@+id/pay_one_year"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:onClick="startPurchasesFlowOneYear"
                            android:text="Оплатить 1 год" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="16sp"
                            android:text="Продлить использование на 10 лет" />

                        <Button
                            android:id="@+id/pay_many_years"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:onClick="startPurchasesFlowManyYears"
                            android:text="Оплатить 10 лет" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.8dp"
                    android:id="@+id/separator324"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"
                    android:layout_margin="15dp"
                    android:background="@android:color/darker_gray"/>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_group_policies"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="startGroupPoliciesActivity"
                    android:layout_gravity="center_horizontal"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top"
                        tools:layout_editor_absoluteY="59dp"
                        tools:layout_editor_absoluteX="50dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="7dp"
                            android:textSize="18sp"
                            android:text="Group policies" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.8dp"
                    android:id="@+id/separator322"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"
                    android:layout_margin="15dp"
                    android:background="@android:color/darker_gray"/>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_horizontal"
                app:contentPadding="0dp">

            <LinearLayout

                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">


        <TextView
            style="@style/HintTextAdmin"
            android:id="@+id/link_to_set_another_admin"
            android:layout_width="300dp"
            android:layout_height="48sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:text="@string/transfer_administrator_rights"/>


                <TextView
                    android:id="@+id/hint_set_another_admin"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/hint_another_admin"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view5"
            style="@style/CardViewMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:contentPadding="0dp">

            <Spinner
                android:id="@+id/change_set_another_admin"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:spinnerMode="dialog"
                android:contentDescription="@string/hint_another_admin"
                android:prompt="@string/prompt_change_user"/>

        </androidx.cardview.widget.CardView>


        <Button android:id="@+id/set_admin_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/transfer_administrator_btn"
            android:onClick="setAnotherAdmin" />


            </LinearLayout>

            </androidx.cardview.widget.CardView>


        <View
            android:layout_width="fill_parent"
            android:layout_height="2.8dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/separator5"
            android:visibility="visible"
            android:layout_margin="15dp"
            android:background="@android:color/darker_gray"/>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            app:contentPadding="0dp">

            <LinearLayout

                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    style="@style/HintTextAdmin"
                    android:id="@+id/link_to_set_delete_group"
                    android:layout_width="300dp"
                    android:layout_height="48sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/delete_group"/>

                <TextView
                    android:id="@+id/message_delete_group"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/message_delete_group"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


